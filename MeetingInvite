  <script>
    const panelTitle = document.getElementById('panel-title');
    const panelContent = document.getElementById('panel-content');
    const templates = {
      'section-brew': document.getElementById('section-brew'),
      'section-reflect-update': document.getElementById('section-reflect-update'),
      'section-questions': document.getElementById('section-questions'),
      'section-location': document.getElementById('section-location')
    };
    function showSection(id){
      const tpl = templates[id];
      if(!tpl) return;
      const clone = tpl.content.cloneNode(true);
      panelContent.innerHTML = '';
      panelTitle.textContent = clone.querySelector('h2').textContent;
      const nodes = Array.from(clone.children); nodes.shift();
      nodes.forEach(n => { n.classList?.add('fade-in'); panelContent.appendChild(n); });
    }
    document.querySelectorAll('.bubble').forEach(btn => {
      btn.addEventListener('click', () => {
        const id = btn.getAttribute('data-target');
        showSection(id);
        btn.setAttribute('aria-expanded','true');
      });
      btn.addEventListener('keydown', (e) => {
        if(e.key === 'Enter' || e.key === ' '){
          e.preventDefault(); btn.click();
        }
      });
    });
    // Actions
    document.getElementById('reset').addEventListener('click', () => {
      panelTitle.textContent = 'Agenda (follow steps 1–4)';
      panelContent.innerHTML = `<ol>
        <li>Brewing a Vietnamese coffee cup together</li>
        <li>Reflections &amp; Updates</li>
        <li>Mentoring questions</li>
        <li>Location</li>
      </ol>`;
      document.querySelectorAll('.bubble').forEach(b => b.setAttribute('aria-expanded','false'));
    });
    document.getElementById('print').addEventListener('click', () => window.print());
    document.getElementById('copy-link').addEventListener('click', async () => {
      try { await navigator.clipboard.writeText(location.href); alert('Link copied to clipboard'); }
      catch { alert('Unable to copy. You can copy from the address bar.'); }
    });
    // RSVP placeholder
    document.getElementById('rsvp').addEventListener('click', (e) => {
      const url = 'https://example.com/your-rsvp-form'; // Replace with your form link
      if(url.includes('example.com')){ e.preventDefault(); alert('Replace the RSVP link in the HTML with your real form URL.'); }
    });
    // Keyboard shortcuts
    window.addEventListener('keydown', (e) => {
      if(e.key.toLowerCase() === 'r') document.getElementById('reset').click();
      if(e.key.toLowerCase() === 'p') document.getElementById('print').click();
    });
  </script>
</body>
